{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "am-dropdown",
  "version": "0.1.2",
  "identifier": "com.am-dropdown.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  
  "app": {
    
    "windows": [
      {
        "resizable": true,
        "title": "AM4-file-converter",
        "width": 340,
        "height": 200,
        "decorations": true,
        "transparent": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
